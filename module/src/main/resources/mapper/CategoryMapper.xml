<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo3.module.mapper.CategoryMapper">
    <insert id="insert" parameterType="com.example.demo3.module.entity.Category" useGeneratedKeys="true" keyProperty="id">
        insert into category (

            <if test="category.createTime != null and category.createTime !=''">create_time,</if>
            <if test="category.updateTime != null and category.updateTime !=''">update_time,</if>
            <if test="category.isDeleted != null and category.isDeleted !=''">is_deleted,</if>
            <if test="category.name != null and category.name !=''">name,</if>
            <if test="category.image != null and category.image !=''">image</if>
        )
        values (

            <if test="category.createTime != null and category.createTime !=''">#{category.createTime},</if>
            <if test="category.updateTime != null and category.updateTime !=''">#{category.updateTime},</if>
            <if test="category.isDeleted != null and category.isDeleted !=''">#{category.isDeleted},</if>
            <if test="category.name != null and category.name !=''">#{category.name},</if>
            <if test="category.image != null and category.image !=''">#{category.image}</if>
        )
    </insert>


    <update id="update" parameterType="com.example.demo3.module.entity.Category">
        update category
        <set>
        <if test="category.id != null and category.id !=''">id = #{category.id},</if>
        <if test="category.createTime != null and category.createTime !=''">create_time = #{category.createTime},</if>
        <if test="category.updateTime != null and category.updateTime !=''">update_time = #{category.updateTime},</if>
        <if test="category.isDeleted != null and category.isDeleted !=''">is_deleted = #{category.isDeleted},</if>
        <if test="category.name != null and category.name !=''">name = #{category.name},</if>
        <if test="category.image != null and category.image !=''">image = #{category.image}</if>
        </set>
        where id = #{category.id}
    </update>

    <select id="getInfoPage" parameterType="com.example.demo3.module.entity.Category" resultType="com.example.demo3.module.entity.Category">
        select * FROM category
        <where>
            is_deleted=0
        </where>
        order by id asc
        limit #{start},#{pageSize}

    </select>
</mapper>

