<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo3.module.mapper.GunDtoMapper">

    <resultMap id="gunDtoResultMap" type="com.example.demo3.module.dto.GunDto">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="images" column="images"/>
        <result property="createTime" column="createTime"/>
        <result property="name" column="name"/>
    </resultMap>

    <select id="getGunDtoList" resultMap="gunDtoResultMap">
        SELECT
        g.id,
        g.title,
        g.images,
        g.create_time AS createTime,
        COALESCE(c.name, '未分类') AS name
        FROM gun g
        LEFT JOIN category c
        ON g.category_id = c.id
        AND c.is_deleted = 0
        <where>
            g.is_deleted = 0
            <if test="gunName != null and gunName != ''">
                AND g.title LIKE CONCAT('%', #{gunName}, '%')
            </if>
            <if test="categoryIds != null and categoryIds != ''">
                AND g.category_id IN (${categoryIds})
            </if>
        </where>
        ORDER BY g.id ASC
        LIMIT #{start}, #{pageSize}
    </select>

</mapper>

